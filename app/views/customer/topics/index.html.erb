<div class="container">
    <div class="row">


        <div class="title_topics">TOPICS</div>

        <% @topics.each do |topic| %>
            <%= link_to topic_path(topic.id) do %>
                <%= attachment_image_tag topic, :image, format: 'jpeg', size: "300x300",  fallback: "no_image.jpg"%><br>
                <%= topic.updated_at.strftime("%Y-%m-%d %H:%M") %><br>
                <%= topic.title %>
            <% end %>
        <% end %>


        <div class="paginate">
            <%= paginate @topics %>
        </div>


    </div>
</div>