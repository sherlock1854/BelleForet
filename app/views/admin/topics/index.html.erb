<div class="container">
    <div class="row">


        <div class="row">
        	<%= form_for(@topic,url:admin_topics_path) do |f| %>

                <div class="field">
                    <%= f.label :image %>
                    <%= f.attachment_field :image %>
                </div>


                <div class="field">
                    <%= f.label :Title %>
                    <%= f.text_field :title, placeholder: "Titleをここに" %>
                </div>


                <div class="field">
                    <%= f.label :Text %>
                    <%= f.text_area :body, placeholder: "TEXTをここに" %>
                </div>


                <div class="actions">
                    <%= f.submit "Create TOPIC" %>
                </div>

            <% end %>
        </div>


        <div class="row">

            <h2>TOPIC一覧</h2>

            <div id="topics">
                <% @topics.each do |topic| %>

                    <%= link_to admin_topic_path(topic.id) do %>
                        <%= attachment_image_tag topic, :image, format: 'jpeg', size: "150x150",  fallback: "no_image.jpg" %><br>
                        <%= topic.updated_at.strftime("%Y-%m-%d %H:%M") %><br>
                        <%= topic.title %>
                    <% end %>

                <% end %>
            </div>


            <div class="paginate">
                <%= paginate @topics %>
            </div>

        </div>


    </div>
</div>